{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2020",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "types": ["vite/client"],
        "paths": {
            "@Constructor/API": [
                "./resources/js/Modules/Constructor/API/Src/index.ts"
            ],
            "@Constructor/Components": [
                "./resources/js/Modules/Constructor/Components/Src/index.ts"
            ],
            "@Documentation/API": [
                "./resources/js/Modules/Documentation/API/Src/index.ts"
            ],
            "@Documentation/Components": [
                "./resources/js/Modules/Documentation/Components/Src/index.ts"
            ],
            "@Documentation/Store": [
                "./resources/js/Modules/Documentation/Store/Src/index.ts"
            ],
            "@NotificationSystem/API": [
                "./resources/js/Modules/NotificationSystem/API/Src/index.ts"
            ],
            "@NotificationSystem/Components": [
                "./resources/js/Modules/NotificationSystem/Components/Src/index.ts"
            ],
            "@NotificationSystem/Store": [
                "./resources/js/Modules/NotificationSystem/Store/Src/index.ts"
            ]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
