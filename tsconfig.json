{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "types": ["vite/client"],
        "paths": {
            "@Constructor/Components": ["./resources/js/Modules/Constructor/Components/Src/index.ts"],
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
